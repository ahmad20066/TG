{%- comment -%}
  Section Divider - Beautiful dividers between sections
  Usage: {% render 'section-divider', style: 'wave' | 'curve' | 'line' | 'dots' %}
{%- endcomment -%}

{%- assign divider_style = style | default: 'wave' -%}

{%- case divider_style -%}
  {%- when 'wave' -%}
    <div class="section-divider section-divider--wave">
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="#DAE3EA"></path>
        <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="#DAE3EA"></path>
        <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="#DAE3EA"></path>
      </svg>
    </div>

  {%- when 'curve' -%}
    <div class="section-divider section-divider--curve">
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V120H1200V0C1200,0 900,120 600,120C300,120 0,0 0,0Z" fill="#DAE3EA"></path>
      </svg>
    </div>

  {%- when 'line' -%}
    <div class="section-divider section-divider--line">
      <div class="section-divider__content">
        <div class="section-divider__line"></div>
        <div class="section-divider__icon">
          <img src="{{ 'logo.png' | asset_url }}" alt="Divider Icon" class="section-divider__logo">
        </div>
        <div class="section-divider__line"></div>
      </div>
    </div>

  {%- when 'dots' -%}
    <div class="section-divider section-divider--dots">
      <div class="section-divider__dots">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

{%- endcase -%}

<style>
.section-divider {
  position: relative;
  width: 100%;
  overflow: hidden;
}

/* Wave divider */
.section-divider--wave {
  margin-top: -3px;
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  margin-right: calc(-50vw + 50%);
  overflow: hidden;
}

.section-divider--wave svg {
  width: 100%;
  height: auto;
  display: block;
  transform: scale(1.1);
}

/* Curve divider */
.section-divider--curve {
  margin-top: -1px;
}

.section-divider--curve svg {
  width: 100%;
  height: auto;
  display: block;
}

/* Line divider */
.section-divider--line {
  padding: 3rem 0;
  background-color: transparent;
  position: relative;
}

.section-divider__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 2rem;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
}

.section-divider__line {
  flex: 1;
  height: 2px;
  background: linear-gradient(to right, rgba(218, 227, 234, 0.1), rgba(218, 227, 234, 0.8), rgba(218, 227, 234, 0.1));
}

.section-divider__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160px;
  height: 100px;
  padding: 0;
  background-color: transparent;
  border-radius: 0;
  position: relative;
}

.section-divider__logo {
  width: 100%;
  height: 100%;
  object-fit: contain;
  filter: brightness(0) saturate(100%) invert(89%) sepia(11%) saturate(234%) hue-rotate(182deg) brightness(95%) contrast(90%);
  opacity: 0.9;
}

/* Dots divider */
.section-divider--dots {
  padding: 2rem 0;
  background-color: #FFFFFF;
  text-align: center;
}

.section-divider__dots {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.section-divider__dots span {
  width: 8px;
  height: 8px;
  background-color: #DAE3EA;
  border-radius: 50%;
  opacity: 0.6;
  animation: dotPulse 2s ease-in-out infinite;
}

.section-divider__dots span:nth-child(2) { animation-delay: 0.2s; }
.section-divider__dots span:nth-child(3) { animation-delay: 0.4s; }
.section-divider__dots span:nth-child(4) { animation-delay: 0.6s; }
.section-divider__dots span:nth-child(5) { animation-delay: 0.8s; }

@keyframes dotPulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
}

@media screen and (max-width: 768px) {
  .section-divider--line {
    padding: 0.75rem 0;
  }
  
  .section-divider__content {
    gap: 0.5rem;
  }
  
  .section-divider__icon {
    width: 100px;
    height: 60px;
  }
  
  .section-divider__icon svg {
    width: 16px;
    height: 16px;
  }

  .section-divider--dots {
    padding: 1rem 0;
  }
}
</style>
